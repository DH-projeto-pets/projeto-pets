<%- include('../partials/head', { title: 'Editar Pet'}) %>
<section class="d-flex" id="wrapper">
  <%- include('../partials/sidebar', { sidebarIsVisible: true}) %>
  <section class="container">
    <section class="row formRegisterPet__rowContainer">
      <section class="col-xs-11 col-sm-11 col-md-10 col-xl-6 formRegisterPet__container">
        <h1 class="col-md-12 text-center">Editar Pet</h1>
        <form class="col-md-12 formRegisterPet__form" method="POST" action="editar?_method=PUT">
          <div class="form-row">
            <div class="form-check form-check-inline">
              <input class="form-check-input <%= errors.status ? 'is-invalid' : '' %>" name="status" type="radio" id="petEncontrado" value="encontrado"
              <%= pet.status == "ENCONTRADO" ? "checked": "" %>>
              <label class="form-check-label" for="petEncontrado">Pet Encontrado</label>
              <%- include('../components/feedback-invalid', { msg: errors['status'] }) %>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input <%= errors.status ? 'is-invalid' : '' %>" name="status" type="radio" id="petPerdido" value="perdido" 
              <%= pet.status == "PERDIDO" ? "checked": "" %>>
              <label class="form-check-label" for="petPerdido">Pet Perdido</label>
              <%- include('../components/feedback-invalid', { msg: errors['status'] }) %>
            </div>
          </div>
          <div class="form-row">
            <section class="form-group col-md-4 pl-0">
              <section class="form-group col-sm-6 col-md-12 pl-0">
                <img src="/images/default-photo.png" alt="Visualização de imagem" class="img-thumbnail">
              </section>
              <section class="form-group col-sm-12 col-md-12 pl-0">
                <section class="col-md-12 p-0">Porte:</section>
                <section class="form-row">
                  <div class="form-check form-check-inline col-sm-3 col-md-12 ">
                    <input class="form-check-input <%= errors.porte ? 'is-invalid' : '' %>" name="porte" type="radio" id="pequeno" value="pequeno" 
                    <%= pet.porte == "PEQUENO" ? "checked": "" %>>
                    <label class="form-check-label" for="pequeno">Pequeno</label>
                    <%- include('../components/feedback-invalid', { msg: errors['porte'] }) %>
                  </div>
                  <div class="form-check form-check-inline col-sm-3 col-md-12">
                    <input class="form-check-input <%= errors.porte ? 'is-invalid' : '' %>" name="porte" type="radio" id="medio" value="medio" 
                    <%= pet.porte == "MEDIO" ? "checked": "" %>>
                    <label class="form-check-label" for="medio">Médio</label>
                    <%- include('../components/feedback-invalid', { msg: errors['porte'] }) %>
                  </div>
                  <div class="form-check form-check-inline col-sm-3 col-md-12">
                    <input class="form-check-input <%= errors.porte ? 'is-invalid' : '' %>" name="porte" type="radio" id="grande" value="grande" 
                    <%= pet.porte == "GRANDE" ? "checked": "" %>>
                    <label class="form-check-label" for="grande">Grande</label>
                    <%- include('../components/feedback-invalid', { msg: errors['porte'] }) %>
                  </div>
                  <!-- <div class="form-check form-check-inline col-sm-3 col-md-12">
                    <input class="form-check-input" name="porte" type="radio" id="desconhecido" value="desconhecido" 
                    <%= pet.porte == "DESCONHECIDO" ? "checked": "" %>>
                    <label class="form-check-label" for="null">Desconhecido</label>
                  </div> -->
                </section>
              </section>
            </section>
            <section class="form-group col-md-8">
              <section class="form-row">
                <label class="col-12" for="especie">
                  Nome:
                </label>
                <input class="form-control
                    col-12" type="text" name="nome" id="" value="<%= pet.nome %>">
              </section>
              <section class="form-row">
                <section class="form-group col-sm-12 col-md-6">
                  <label for="especie">Espécie</label>
                  <select class="form-control <%= errors.especie ? 'is-invalid' : '' %>" id="especie">
                    <option>Cachorro</option>
                    <option>Gato</option>
                    <!-- <option>Passáro</option> -->
                  </select>
                  <%- include('../components/feedback-invalid', { msg: errors['especie'] }) %>
                </section>
                <section class="form-group col-sm-12 col-md-6">
                  <label for="raca">Raça</label>
                  <select class="form-control <%= errors.raca ? 'is-invalid' : '' %>" id="raca">
                    <option>Selecione uma raça</option>
                  </select>
                  <%- include('../components/feedback-invalid', { msg: errors['raca'] }) %>
                </section>
                <section class="form-group col-sm-12 col-md-12">
                  <label>Sexo</label>
                  <section class="form-row">
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" name="sexo" type="radio" id="radio-femea" value="femea" 
                      <%= pet.sexo == "FEMEA" ? "checked": "" %>>
                      <label class="form-check-label" for="radio-femea">Fêmea</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" name="sexo" type="radio" id="radio-macho" value="macho" 
                      <%= pet.sexo == "MACHO" ? "checked": "" %>>
                      <label class="form-check-label" for="radio-macho">Macho</label>
                    </div>
                    <div class="form-check form-check-inline">

                      <input class="form-check-input" name="sexo" type="radio" id="radio-desconhecido" value="desconhecido" 
                      <%= pet.sexo == "DESCONHECIDO" ? "checked": "" %>> 
                      <label class="form-check-label" for="radio-null">Desconhecido</label>
                    </div>

                  </section>
                </section>
                <section class="form-group col-sm-12 col-md-12">
                  <section class="custom-file">
                    <input type="file" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Selecionar arquivo</label>
                  </section>
                </section>
                <section class="form-group col-sm-12 col-md-12">
                  <label for="descricao">Descrição</label>
                  <textarea class="form-control" id="descricao" rows="3" cols="100" name="descricao"><%= pet.descricao %></textarea>
                </section>
                <section class="form-group col-sm-12 col-md-12">
                  <button type="button" class="btn btn-block orange" data-toggle="modal" data-target="#modal-endereco">
                    Adicionar o endereço manualmente
                  </button>
                </section>

                <section class="form-group col-sm-12 col-md-12" style="display: flex; justify-content: flex-end;">
                  <button type="button" class="btn orange--offset mr-2">
                    Cancelar
                  </button>
                  <button type="submit" class="btn orange">
                    Salvar Alterações
                  </button>
                </section>

          </div>
        </form>
      </section>
    </section>
  </section>
  <div class="espaco-branco"></div>
</section>
<%- include('../partials/footer') %>

<section class="modal fade" id="modal-endereco" tabindex="-1" role="dialog" aria-hidden="true">
  <section class="modal-dialog" role="document">
    <section class="modal-content">
      <section class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Endereço:</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </section>
      <section class="modal-body">
        <form>
          <section class="form-row">
            <section class="form-group col-md-12">
              <label for="endereco">Endereço</label>
              <input type="email" class="form-control" id="endereco" />
            </section>
          </section>
          <section class="form-row">
            <section class="form-group col-md-6">
              <label for="CEP">CEP</label>
              <input type="numeric" class="form-control" id="CEP" />
            </section>
            <section class="form-group col-md-6">
              <label for="bairro">Bairro</label>
              <input type="email" class="form-control" id="bairro" />
            </section>
          </section>
          <section class="form-row">
            <section class="form-group col-md-6">
              <label for="cidade">Cidade</label>
              <input type="numeric" class="form-control" id="cidade" />
            </section>
            <section class="form-group col-md-6">
              <label for="estado">Estado</label>
              <input type="email" class="form-control" id="estado" />
            </section>
          </section>
        </form>
      </section>
      <section class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Fechar
        </button>
        <button type="submit" class="btn orange">Salvar</button>
      </section>
    </section>
  </section>
</section>
</div>