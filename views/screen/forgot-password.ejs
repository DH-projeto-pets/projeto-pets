<%- include('../partials/head', { title: 'Esqueci a senha' }) %>
<section class="d-flex content-forgot-password" id="wrapper">
  <%- include('../partials/sidebar', { sidebarIsVisible: false }) %>

  <div class="container-fluid" id="div-container-forgot">
    <div class="row justify-content-center">
      <div class="col-8 col-sm-7 col-md-5 col-lg-4 col-xl-3">
        <div class="box-forgot-passwd">
          <div class="panel-heading text-center">
            <h5 class="card-header" id="card-header-forgot-h5">Esqueci a senha</h5>
          </div>
          <section class="section-forgot-paswd">
            <form class="form-container">
              <div class="panel-content text-center mb-5">
                <span class="texto-forgot">Por favor, informe o email para recuperar a senha</span>
              </div>
              <div class="form-group input-lost-passwd" id="email-group">
                <input
                  type="email"
                  class="form-control mb-4 text-center"
                  placeholder="Digite seu email"
                />
              </div>
              <div class="submit-button mb-4 xs-3">
                <button type="submit" class="btn btn-block" id="btn-entrar">
                  Recuperar a senha
                </button>
              </div>
              <div class="row">
                <div class="col">
                  <a href="/login" class="forgot-link-login">Voltar para a tela de login</a>
                </div>
              </div>
                <div class="row mb-4">  
                  <div class="col">            
                <a href="/cadastro" class="forgot-link-register text-end">Criar conta</a>
                </div>
                </div>
           
                 
          
            </form>
          </section>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('../partials/footer') %>
