<%- include('../partials/head', { title: 'Esqueci a senha' }) %>
<div class="d-flex" id="wrapper">
  <%- include('../partials/sidebar', { sidebarIsVisible: false }) %>

  <div class="container-fluid" id="div-container-forgot">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-6 col-md-3">
        <div class="box-forgot-passwd">
          <div class="panel-heading">
            <button type="button" class="close mr-2" aria-label="Fechar">
              <span aria-hidden="true">&times;</span>
            </button>
            <h5 class="card-header h5">Esqueci a senha</h5>
          </div>
          <section class="section-forgot-paswd">
            <form class="form-container">
              <div class="panel-content text-center mb-4">
                Por favor, informe o email para recuperar a senha
              </div>
              <div class="form-group input-lost-passwd" id="email-group">
                <input
                  type="email"
                  class="form-control mb-4"
                  placeholder="Digite seu email"
                />
              </div>
              <div class="submit-button mb-3">
                <button type="submit" class="btn btn-block" id="btn-entrar">
                  Recuperar a senha
                </button>
              </div>
            </form>
          </section>
        </div>
      </div>
    </div>
  </div>
  <%- include('../partials/footer') %>
</div>
