<%- include('../partials/head', { title: 'Pets para Adoção'}) %>
<section class="d-flex" id="wrapper">
  <%- include('../partials/sidebar', { sidebarIsVisible: true }) %>
  <%console.log(parsedQuery)%>
  <section class="container">
    <div class="row justify-content-md-center">
      <div class="col-md-10 main-container main-container__pets">
        <section class="filter__container">
          <div class="container">
            <div class="row filter-title-row">
              <span class="filter-title">
                <a href="#collapse-filtro" data-toggle="collapse">
                  <i class="indicator fa fa-caret-down" aria-hidden="true"></i>
                  Filtros
                </a>
                <!-- <% console.log(parsedQuery) %> -->
              </span>
            </div>
          </div>
          <div class="container collapse" id="collapse-filtro">
            <div class="row">
              <form action="" method="GET" class="col-md-12 d-flex flex-wrap">
                <div class="col-md-3 col-12 filter-column">
                  <h5>Distância</h5>
                  <div class="slidecontainer">
                    <input type="range" min="0" max="100" value="50" class="slider" id="myRange" style="width: 100%;">
                  </div>
                  <!-- Adiciona contador dinâmico -->
                  <span>Até </span><span id="distance-counter">50</span><span>km</span>
                </div>
                <div class="col-md-3 col-12 filter-column">
                  <h5>Espécie</h5>
                  <select class="form-control form-control-sm" name="especie" id="especie">
                    <option value="">Selecione uma especie</option>
                    <option value="1">Gato</option>
                    <option value="2">Cachorro</option>
                  </select>
                </div>
                <div class="col-md-3 col-12 filter-column">
                  <h5>Raça</h5>
                  <select class="form-control form-control-sm" id="raca" name="raca" class="selectpicker"
                    data-live-search="true">
                    <option value="">Selecione uma raça</option>
                  </select>
                </div>
                <div class="col-md-3 col-12 filter-column">
                  <h5>Porte</h5>
                  <input type="checkbox" name="porte" value="PEQUENO" id="PEQUENO" <%=parsedQuery.porte && parsedQuery.porte.includes('PEQUENO')
                    ? 'checked' : '' %>><label for="PEQUENO">&nbsp;Pequeno</label><br>
                  <input type="checkbox" name="porte" value="MEDIO" id="MEDIO"
                    <%=parsedQuery.porte && parsedQuery.porte.includes('MEDIO')  ? 'checked' : '' %>><label
                    for="MEDIO">&nbsp;Médio</label><br>
                  <input type="checkbox" name="porte" value="GRANDE" id="GRANDE"
                    <%=parsedQuery.porte && parsedQuery.porte.includes('GRANDE')  ? 'checked' : '' %>><label
                    for="GRANDE">
                    &nbsp;Grande</label><br>
                </div>
                <div class="col-md-2 col-12 filter-column">
                  <h5>Vacinado</h5>
                  <input type="checkbox"
                    <%=parsedQuery.vacinado && parsedQuery.vacinado.includes('1') ? 'checked' : '' %> name="vacinado"
                    value="1" id="vacionado-sim"><label for="vacionado-sim">&nbsp;Sim</label><br>
                  <input type="checkbox"
                    <%=parsedQuery.vacinado && parsedQuery.vacinado.includes('0') ? 'checked' : '' %> name="vacinado"
                    value="0" id="nao-vacinado"><label for="nao-vacinado">&nbsp;Não</label><br>
                </div>
                <div class="col-md-2 col-12 filter-column">
                  <h5>Vermifugado</h5>
                  <input type="checkbox"
                    <%=parsedQuery.vermifugado && parsedQuery.vermifugado.includes('1') ? 'checked' : '' %>
                    name="vermifugado" value="1" id="vermifugado-sim"><label for="vermifugado-sim">&nbsp;Sim</label><br>
                  <input type="checkbox"
                    <%=parsedQuery.vermifugado && parsedQuery.vermifugado.includes('0') ? 'checked' : '' %>
                    name="vermifugado" value="0" id="vermifugado-nao"><label for="vermifugado-nao">&nbsp;Não</label><br>
                </div>
                <div class="col-md-2 col-12 filter-column">
                  <h5>Castrado</h5>
                  <input type="checkbox"
                    <%=parsedQuery.castrado && parsedQuery.castrado.includes('1') ? 'checked' : '' %> name="castrado"
                    value="1" id="castrado-sim"><label for="castrado-sim">&nbsp;Sim</label><br>
                  <input type="checkbox"
                    <%=parsedQuery.castrado && parsedQuery.castrado.includes('0') ? 'checked' : '' %> name="castrado"
                    value="0" id="castrado-nao"><label for="castrado-nao">&nbsp;Não</label><br>
                </div>
                <div class="col-md-3 col-12 filter-column">
                  <h5>Sexo</h5>
                  <input type="checkbox" name="sexo" value="FEMEA" id="FEMEA"
                    <%= parsedQuery.sexo && parsedQuery.sexo.includes('FEMEA') ? 'checked' : ''%>><label for="FEMEA">
                    &nbsp;Fêmea</label><br>
                  <input type="checkbox" name="sexo" value="MACHO" id="MACHO"
                    <%= parsedQuery.sexo && parsedQuery.sexo.includes('MACHO') ? 'checked' : ''%>><label for="MACHO">
                    &nbsp;Macho</label><br>
                  <input type="checkbox" name="sexo" value="DESCONHECIDO" id="DESCONHECIDO"
                    <%= parsedQuery.sexo && parsedQuery.sexo.includes('DESCONHECIDO') ? 'checked' : ''%>><label
                    for="DESCONHECIDO">
                    &nbsp;Desconhecido</label><br>
                  <!-- <input type="radio" name="porte" value="" id="todos" selected><label for="todos"> Todos</label><br> -->
                </div>
                <div class="col-md-3 col-12">
                  <h5>Responsável</h5>
                  <input type="checkbox" value="ONG"
                    <%=parsedQuery.tipo && parsedQuery.tipo.includes('ONG')? 'checked' : '' %> name="tipo"
                    id="ONG"><label for="ONG">&nbsp;ONG</label><br>
                  <input type="checkbox" value="PF"
                    <%=parsedQuery.tipo && parsedQuery.tipo.includes('PF') ? 'checked' : '' %> name="tipo"
                    id="PF"><label for="PF">&nbsp;Pessoa Física</label><br>
                </div>
                <div class="row w-100">
                  <div class="col-md-12 d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary botao-medio-amarelo">Filtrar</button>
                  </div>
                </div>
              </form>
            </div>
          </div>

        </section>

        <!-- container do grid de pets -->
        <section class="grid-pets__container">
          <div class="row w-100 justify-content-center my-3">
            <h1>Pets para Adoção</h1>
          </div>
          <!-- Grid Dinâmico -->
          <% if(pets.length > 0){ %>
          <% for (pet of pets) {%>
          <%- include('../components/card-grid-pets', { pet }) %>
          <% } %>
          <% } else { %>
          <img src="/images/404-transparent.png" class="not-found-img-grid" alt="Nenhum pet foi encontrado" />
          <%}%>
        </section>

        <!-- Paginação -->
        <section class="container my-3">
          <div class="row justify-content-center">
            <ul class="pagination">
              <% for (let nPagina = 1; nPagina <= totalPagina; nPagina++) { %>
          <li class="page-item"><a href="?<%=query.reduce(
            (a, c) => (a += `${Object.keys(c)}=${Object.values(c)}&`),
            '')%>page=<%= nPagina %>" class="page-link"><%= nPagina %></a></li>
          <% } %>
          </ul>
      </div>
  </section>

  </div>
</section>
<div class="espaco-branco"></div>
</section>


<%- include('../partials/footer') %>