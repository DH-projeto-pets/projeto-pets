<%- include('../partials/head', { title: 'Pets para Adoção'}) %>
<section class="d-flex" id="wrapper">
  <%- include('../partials/sidebar', { sidebarIsVisible: true }) %>

  <section class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-10 main-container main-container__pets">
            <section class="filter__container">
                <div class="container">
                    <div class="row filter-title-row">
                        <span class="filter-title">
                            <a href="#collapse-filtro" data-toggle="collapse">
                                <i class="indicator fa fa-caret-down" aria-hidden="true"></i>
                                Filtros 
                            </a>

                        </span>
                    </div>
                </div>
                <div class="container collapse" id="collapse-filtro">
                    <div class="row">
                        <form action="" class="col-md-12 d-flex flex-wrap">
                            <div class="col-md-3 col-12 filter-column">
                                <h5>Distância</h5>
                                <input type="radio" name="distancia" id="0to1"><label for="0to1">0 - 1km</label><br>
                                <input type="radio" name="distancia" id="1to3"><label for="1to3">1km - 3km</label><br>
                                <input type="radio" name="distancia" id="3to5"><label for="3to5">3 - 5km</label><br>
                                <input type="radio" name="distancia" id="todos"><label for="todos">Todos</label>
                            </div>
                            <div class="col-md-3 col-12 filter-column">
                                <h5>Espécie</h5>
                                <select class="form-control form-control-sm">
                                    <option>-- Espécie --</option>
                                    <option>Cachorro</option>
                                    <option>Gato</option>
                                    <option>Ave</option>
                                </select>
                            </div>
                            <div class="col-md-3 col-12 filter-column">
                                    <h5>Raça</h5>
                                    <select class="form-control form-control-sm">
                                        <option>-- Raça --</option>
                                        <option>SRD</option>
                                        <option>Poodle</option>
                                        <option>Rottweiler</option>
                                        <option>Golden</option>
                                        <option>Cocker</option>
                                        <option>Chiwawa</option>
                                    </select>
                            </div>
                            <div class="col-md-3 col-12">
                                <h5>Porte</h5>
                                <input type="radio" name="porte" id="p"><label for="p">Pequeno</label><br>
                                <input type="radio" name="porte" id="m"><label for="m">Médio</label><br>
                                <input type="radio" name="porte" id="g"><label for="g">Grande</label><br>
                                <input type="radio" name="porte" id="gg"><label for="gg">Muito Grande</label>
                            </div>
                            <div class="col-md-3 col-12 filter-column">
                                <h5>Vacinado</h5>
                                <input type="radio" name="vacinado" id="sim"><label for="sim">Sim</label><br>
                                <input type="radio" name="vacinado" id="nao"><label for="nao">Não</label><br>
                            </div>
                            <div class="col-md-3 col-12 filter-column">
                                <h5>Vermifugado</h5>
                                <input type="radio" name="vermifugado" id="vermifugado-sim"><label for="vermifugado-sim">Sim</label><br>
                                <input type="radio" name="vermifugado" id="vermifugado-nao"><label for="vermifugado-nao">Não</label><br>
                            </div>
                            <div class="col-md-3 col-12">
                                <h5>Responsável</h5>
                                <input type="radio" name="tipo" id="ong"><label for="ong">ONG</label><br>
                                <input type="radio" name="tipo" id="pf"><label for="pf">Pessoa Física</label><br>
                            </div>
                            <div class="row w-100">
                                <div class="col-md-12 d-flex justify-content-center">
                                    <input type="button" value="Filtrar" class="btn btn-primary botao-medio-amarelo">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </section>
            
            <!-- container do grid de pets -->
            <section class="grid-pets__container">
                <div class="row w-100 justify-content-center my-3">
                    <h1>Pets para Adoção</h1>
                </div>
                <div class="card grid-pets-item" style="width: 18rem;">
                    <a href="/pet/:id">
                        <img class="card-img-top" src="/images/gato.jpg" alt="Pet perdido/encontrado">
                    </a>
