<%- include('../partials/head', { title: 'Editar Pet para adoção'}) %>
<section class="d-flex" id="wrapper">
  <%- include('../partials/sidebar', { sidebarIsVisible: true}) %>
  <section class="container">
    <section class="row formRegisterPet__rowContainer">
      <section class="col-xs-11 col-sm-11 col-md-10 col-xl-8 formRegisterPet__container">
        <h1 class="col-md-12 text-center">Editar Pet para adoção</h1>
        <form class="col-md-12 formRegisterPet__form" method="POST" action="editar?_method=PUT">

          <div class="form-row">
            <section class="form-group
                            col-md-4 pl-0">
              <section class="form-group
                              col-sm-6 col-md-12 pl-0">
                <img src="/images/pet.jpg" alt="Visualização de imagem" class="img-thumbnail">
              </section>
              <section class="form-group 
                              col-sm-12 col-md-12 pl-0">
                <!-- Por que isso é uma section? -->
                <section class="col-md-12 p-0">Porte:</section>
                <section class="form-row">
                  <div class="form-check form-check-inline
                              col-sm-3 col-md-12 ">
                    <input class="form-check-input" name="porte" type="radio" id="pequeno" value="pequeno" 
                    <%= pet.porte == "PEQUENO" ?  "checked": "" %>>
                    <label class="form-check-label" for="pequeno">Pequeno</label>
                  </div>
                  <div class="form-check form-check-inline
                              col-sm-3 col-md-12">
                    <input class="form-check-input" name="porte" type="radio" id="medio" value="medio"
                    <%= pet.porte == "MEDIO" ? "checked": "" %>>
                    <label class="form-check-label" for="medio">Médio</label>
                  </div>
                  <div class="form-check form-check-inline
                              col-sm-3 col-md-12">
                    <input class="form-check-input" name="porte" type="radio" id="grande" value="grande"
                    <% pet.porte == "GRANDE" ? "checked": "" %>>
                    <label class="form-check-label" for="grande">Grande</label>
                  </div>
                  <div class="form-check form-check-inline
                              col-sm-3 col-md-12">
                    <input class="form-check-input" name="porte" type="radio" id="desconhecido" value="desconhecido" 
                    <%= pet.porte == "DESCONHECIDO" ? "checked": "" %>>
                    <label class="form-check-label" for="null">Desconhecido</label>
                  </div>
                </section>
              </section>
            </section>

            <!-- Lado direito do formulário -->
            <div class="form-group col-md-8">
              <section class="form-row">
                <label class="col-12" for="especie">
                  Nome:
                </label>
                <input class="form-control
                            col-12" type="text" name="nome" id="" value="<%= pet.nome %>">
              <!-- </section> -->
                <section class="form-group col-sm-12 col-md-12">
                  <label class="mr-2">Sexo:</label>
                  <section class="form-row">
                    <div class="form-check ml-2 form-check-inline">
                      <input class="form-check-input" name="sexo" type="radio" id="radio-femea" value="femea" 
                      <%= pet.sexo == "FEMEA" ? "checked": "" %>>
                      <label class="form-check-label" for="radio-femea">Fêmea</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" name="sexo" type="radio" id="radio-macho" value="macho" 
                      <%= pet.sexo == "MACHO" ? "checked": "" %>>
                      <label class="form-check-label" for="radio-macho">Macho</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" name="sexo" type="radio" id="radio-null" value="desconhecido" 
                      <%= pet.sexo == "DESCONHECIDO" ? "checked": "" %>>
                      <label class="form-check-label" for="radio-null">Desconhecido</label>
                    </div>
                  </section>
                </section>

              <section>
                <label for="especie">Fotos</label>
              </section>

              <section class="form-group 
                              col-sm-12 col-md-12">
                <section class="custom-file">
                  <input type="file" class="custom-file-input" id="customFile">
                  <label class="custom-file-label" for="customFile">Selecionar arquivo</label>
                </section>
              </section>

              <section class="form-row">
                <section class="form-group col-sm-12 col-md-6">
                  <label for="especie">Espécie</label>
                  <select class="form-control" name="especie" id="especie">
                    <option value="cachorro">Cachorro</option>
                    <option value="gato">Gato</option>
                    <option value="passaro">Passáro</option>
                  </select>
                </section>

                <section class="form-group col-sm-12 col-md-6">
                  <label for="raca">Raça</label>
                  <select class="form-control" name="raca" id="raca">
                    <option value="indefinido">Indefinida</option>
                  </select>
                </section>

                <section class="form-group row
                                col-sm-12 col-md-12">
                  <label class="col-6">Vacinado</label>
                  <section class="form-row col-6">
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" name="vacinado" type="radio" id="vacinado-sim" value="1" 
                      <%= pet.vacinado == 1 ? "checked": "" %>>
                      <label class="form-check-label" for="vacinado-sim">Sim</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" name="vacinado" type="radio" id="vacinado-nao" value="0" 
                      <%= pet.vacinado == 0 ? "checked": "" %>>
                      <label class="form-check-label" for="vacinado-nao">Não</label>
                    </div>
                  </section>
                </section>

                <section class="form-group row
                                col-sm-12 col-md-12">
                  <label class="col-6">Castrado</label>
                  <section class="form-row col-6">
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" name="castrado" type="radio" id="castrado-sim" value="1" 
                      <%= pet.castrado == 1 ? "checked": "" %>>
                      <label class="form-check-label" for="castrado-sim">Sim</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" name="castrado" type="radio" id="castrado-nao" value="0" 
                      <%= pet.castrado == 0 ? "checked": "" %>>
                      <label class="form-check-label" for="castrado-nao">Não</label>
                    </div>
                  </section>
                </section>
                <section class="form-group row 
                                col-sm-12 col-md-12">
                  <label class="col-6">Vermifugado</label>
                  <section class="form-row col-6">
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" name="vermifugado" type="radio" id="vermifugado-sim"
                        value="1" <%= pet.vermifugado == 1 ? "checked": "" %>>
                      <label class="form-check-label" for="vermifugado-sim">Sim</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" name="vermifugado" type="radio" id="vermifugado-nao"
                        value="0" <%= pet.vermifugado == 0 ? "checked": "" %>>
                      <label class="form-check-label" for="vermifugado-nao">Não</label>
                    </div>
                  </section>


                  <section class="form-group 
                                col-sm-12 col-md-12">
                    <label for="descricao">Descrição</label>
                    <textarea class="form-control" id="descricao" rows="3" cols="100" name="descricao"><%= pet.descricao %></textarea>
                  </section>
                </section>
                <section class="form-group 
                              col-sm-12 col-md-12
                              d-flex justify-content-end">
                  <button type="button" class="btn orange--offset mr-2">Cancelar</button>

                  <button type="submit" class="btn orange">Salvar Alterações</button>
                </section>
            </div>
          </div>
        </form>
      </section>
    </section>
  </section>
  <div class="espaco-branco"></div>
</section>
<%- include('../partials/footer') %>