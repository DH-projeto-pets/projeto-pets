<%- include('../partials/head', { title: 'Cadastrar Pet para adoção'}) %>
<section class="d-flex" id="wrapper">
  <%- include('../partials/sidebar', { sidebarIsVisible: true}) %>
  <section class="container-fluid">
    <section class="row formRegisterPet__rowContainer">
      <section class="formRegisterPet__container
                      register-pet-adoption
                      col-12
                      col-md-10
                      col-xl-8">
        <h1 class="col-md-12
                    text-center">
                    Cadastrar Pet para adoção
                    <i class="far fa-question-circle"
                        data-toggle="modal"
                        data-target="#modal-petEncontrado">
                    </i>
        </h1>
        <form class="col-md-12 formRegisterPet__form"
              action="/perfil-dono"
              method="GET">

          <div class="form-row">
            <section class="form-group
                            col-md-4 pl-0">
              <section class="form-group col-sm-6 col-md-12 pl-0 form-img-review">
                <img src="/images/default-photo.png" alt="Visualização de imagem" class="img-thumbnail preview-img">
              </section>
              <section class="form-group 
                              col-sm-12 col-md-12 pl-0">
                <section class="col-md-12 p-0">Porte:</section>
                <section class="form-row">
                  <div class="form-check
                              form-check-inline
                              col-sm-3
                              col-md-12 ">
                    <input
                      class="form-check-input"
                      name="porte"
                      type="radio"
                      id="pequeno"
                      value="pequeno"
                    />
                    <label class="form-check-label"
                            for="pequeno">
                            Pequeno
                    </label>
                  </div>
                  <div class="form-check
                              form-check-inline
                              col-sm-3
                              col-md-12">
                    <input
                      class="form-check-input"
                      name="porte"
                      type="radio"
                      id="medio"
                      value="medio"
                    />
                    <label class="form-check-label"
                            for="medio">
                            Médio
                    </label>
                  </div>

                  <div class="form-check
                              form-check-inline
                              col-sm-3
                              col-md-12">
                    <input
                      class="form-check-input"
                      name="porte"
                      type="radio"
                      id="grande"
                      value="grande"
                    />
                    <label class="form-check-label"
                            for="grande">
                            Grande
                    </label>
                  </div>
                  <div class="form-check
                              form-check-inline
                              col-sm-3
                              col-md-12">
                    <input
                          class="form-check-input"
                          name="porte"
                          type="radio"
                          id="null"
                          value="null"
                          />
                    <label class="form-check-label"
                            for="null">Não sei
                    </label>
                  </div>
                </section>
              </section>
            </section>

            <!-- Lado direito do formulário -->
            <div class="form-group
                        col-md-8">
              <section class="form-row">
                <label class="col-12"
                        for="especie">
                        Nome:
                </label>
                <input 
                    class="form-control
                            col-12"
                    type="text"
                    name="nome"
                    id="">
                <section class="form-group
                                col-12">
                  <label class="mr-2">
                    Sexo:
                  </label>
                  <section class="form-row">
                    <div class="form-check
                                col-3
                                form-check-inline">
                      <input
                          class="form-check-input"
                          name="sexo"
                          type="radio"
                          id="radio-femea"
                          value="femea"/>
                      <label class="form-check-label"
                              for="radio-femea">
                              Fêmea
                      </label>
                    </div>
                    <div class="form-check
                                col-3
                                form-check-inline">
                      <input
                          class="form-check-input"
                          name="sexo"
                          type="radio"
                          id="radio-macho"
                          value="macho"/>
                      <label class="form-check-label"
                              for="radio-macho">
                              Macho
                      </label>
                    </div>
                    <div class="form-check
                                col-4
                                form-check-inline"> 
                      <input
                          class="form-check-input"
                          name="sexo"
                          type="radio"
                          id="radio-null"
                          value="null"/>
                      <label class="form-check-label"
                              for="radio-null">
                              Não sei
                      </label>
                    </div>
                  </section>
                </section>
                <!-- Campo de idade do pet -->
