              <section class="col-12">
                <label class="col-12"
                        for="especie">Fotos:</label>
              </section>
              <section class="col-12 d-flex 
                              justify-content-between flex-wrap">
                <div class="fotos">
                  <i class="fa fa-times-circle"
                      aria-hidden="true">
                  </i>
                  <img id="foto1" src="/images/foto-default-pet.jpeg" 
                        alt="">
                </div>
                <div class="fotos">
                  <i class="fa fa-times-circle"
                      aria-hidden="true">
                  </i>
                  <img id="foto2"src="/images/foto-default-pet.jpeg"
                        alt="">
                </div>
                <div class="fotos">
                  <i class="fa fa-times-circle"
                      aria-hidden="true"></i>
                  <img id="foto3" src="/images/foto-default-pet.jpeg"
                        alt="">
                </div>
                <div class="fotos">
                  <i class="fa fa-times-circle"
                      aria-hidden="true"></i>
                  <img id="foto4"src="/images/foto-default-pet.jpeg" alt="">
                </div>
              </section>
              <section class="form-group col-sm-12 col-md-12">
                <section class="custom-file">
                  <input type="file"
                        class="custom-file-input"
                        id="customFile"
                        onchange="imgArquivo(event)">
                  <label class="custom-file-label"
                          for="customFile">
                          Selecionar foto
                        </label>
                </section>
              </section>
              

              <section class="form-row">
                <section class="form-group col-sm-12 col-md-6">
                  <label for="especie">Espécie:</label>
                  <select
                      class="form-control"
                      name="especie"
                      id="especie">
                    <option value="cachorro">Cachorro</option>
                    <option value="gato">Gato</option>
                    <option value="passaro">Passáro</option>
                  </select>
                </section>

                <section class="form-group col-sm-12 col-md-6">
                  <label for="raca">Raça</label>
                  <select class="form-control"
                          name="raca"
                          id="raca">
                    <option value="indefinido">Indefinida</option>
                  </select>
                </section>
              </section>
              <!-- Campo sobre se Pet é vacinado ou não -->
              <section class="form-group
                              row
                              col-12">
                <label class="col-4">
                  Vacinado:
                </label>
                <section class="form-row
                                col-6">
                  <div class="form-check
                              form-check-inline">
                    <input
                    class="form-check-input"
                    name="vacinado"
                    type="radio"
                    id="vacinado-sim"
                    value="sim"/>
                    <label
                      class="form-check-label"
                      for="vacinado-sim">
                      Sim
                    </label>
                  </div>
                  <div class="form-check
                              form-check-inline">
                    <input
                        class="form-check-input"
                        name="vacinado"
                        type="radio"
                        id="vacinado-nao"
                        value="nao"/>
                    <label
                      class="form-check-label"
                      for="vacinado-nao">
                      Não
                    </label>
                  </div>
                </section>
              </section>
              <!-- Campo sobre se Pet é castrado ou não -->
              <section class="form-group
                              row
                              col-12">
                <label class="col-4">
                  Castrado:
                </label>
                <section class="form-row
                                col-6">
                  <div class="form-check
                              form-check-inline">
                    <input
                    class="form-check-input"
                    name="castrado"
                    type="radio"
                    id="castrado-sim"
                    value="sim"/>
                    <label
                      class="form-check-label"
                      for="castrado-sim">
                      Sim
                    </label>
                  </div>
                  <div class="form-check
                              form-check-inline">
                    <input
                      class="form-check-input"
                      name="castrado"
                      type="radio"
                      id="castrado-nao"
                      value="nao"/>
                    <label
                      class="form-check-label"
                      for="castrado-nao">
                      Não
                    </label>
                  </div>
                </section>
              </section>
              <!-- Campo sobre se Pet é vermifugado ou não -->
              <section class="form-group
                              row 
                              col-12">
                <label class="col-4">
                  Vermifugado:
                </label>
                <section class="form-row
                                col-6">
                  <div class="form-check
                              form-check-inline">
                    <input
                      class="form-check-input"
                      name="vermifugado"
                      type="radio"
                      id="vermifugado-sim"
                      value="sim"/>
                    <label
                      class="form-check-label"
                      for="vermifugado-sim">
                      Sim
                    </label>
                  </div>
                  <div class="form-check
                              form-check-inline">
                    <input
                        class="form-check-input"
                        name="vermifugado"
                        type="radio"
                        id="vermifugado-nao"
                        value="nao"/>
                    <label class="form-check-label"
                            for="vermifugado-nao">
                            Não
                    </label>
                  </div>
                </section>
              </section>

                <!-- Descrição do animal -->
              <section class="form-group 
                              col-12">
                <label for="descricao">Descrição:</label>
                <textarea
                      class="form-control"
                      id="descricao"
                      rows="3"
                      cols="100">
                </textarea>
              </section>
              <section class="form-group col-sm-12 col-md-12">
                <button
                type="button"
                class="btn btn-block orange"
                data-button="getAddress"
                >
                  Localização atual
                </button>

              </section>
              <section class="form-group col-sm-12 col-md-12">
                <button
                type="button"
                class="btn btn-block orange"
                data-button="getAddress"
                >
                  Usar endereço cadastrado
                </button>

              </section>
              <section class="form-group col-sm-12">
                <button
                type="button"
                class="btn btn-block orange"
                data-toggle="modal"
                data-target="#modal-endereco"
                >
                  Adicionar o endereço manualmente
                </button>
              </section>
              
              <section class="form-group 
                              col-sm-12 col-md-12
                              d-flex justify-content-end">
                <button type="button" class="btn orange--offset mr-2">Cancelar</button>
                <button type="submit" class="btn orange">Cadastrar</button>
              </section>          
            </div>
          </div>
        </form>
      </section>
    </section>
  </section>

