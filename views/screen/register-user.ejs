                <a href="/termos-de-uso">
                  Termos de uso
                </a>
                e Políticas de Privacidade.
              </label>
            </section> -->

          <button class="btn btn-login" type="submit" id="btn-cadastrar" disabled>
            Cadastrar
          </button>
        </form>
        <!-- /form -->

        <!-- <div class="col text-right">
            <a href="/esqueci-senha" class="forgot ">Esqueci a senha</a>
          </div> -->
    </div>
</section>
</div>
