<%- include('../partials/head', { title: 'Criar conta' }) %>

<section class="d-flex alo" id="wrapper">
  <%- include('../partials/sidebar', { sidebarIsVisible: false }) %>
  <div class="container">
    <div class="card card-container-login">
      <div class="card-header text-center" id="card-header-login">
        <h1 class="h5-card-header-login">Criar conta</h1>
      </div>

      <section class="section-form-login mt-4">

        <form action="/cadastrar" method="POST" class="form-signin">

          <label class="login-email-label">Nome:</label>
          <input type="text" name="nome" id="nome" value="<% usuario.nome ? usuario.nome : '' %>" class="form-control text-center <%= errors.nome ? 'is-invalid' : '' %>" required autofocus />
          <%- include('../components/feedback-invalid', { msg: errors['nome'] }) %>
          <label class="login-email-label">Email:</label>
          <input type="email" name="email" id="email" value="<% usuario.email ? usuario.email : '' %>" class="form-control text-center <%= errors.email ? 'is-invalid' : '' %>"  required autofocus />
          <%- include('../components/feedback-invalid', { msg: errors['email'] }) %>
          <label class="login-senha-label">Senha:</label>
          <input type="password" name="senha" id="senha" class="form-control text-center <%= errors.senha ? 'is-invalid' : '' %>"  required />
          <%- include('../components/feedback-invalid', { msg: errors['senha'] }) %>
          <label class=" login-confirmar-senha-label">Confirmar senha:</label>
          <input type="password" name="confirmar_senha" id="confirmar_senha" class="form-control text-center <%= errors.confirmar_senha ? 'is-invalid' : '' %>"
             required />
          <%- include('../components/feedback-invalid', { msg: errors['confirmar_senha'] }) %>

          <!-- <section class="form-row d-flex align-items-center mt-4">
              <input type="checkbox" class="col-1" id="termos-de-uso">
