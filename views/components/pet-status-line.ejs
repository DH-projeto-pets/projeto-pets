            <div class="card-body py-3">
                <i class="fas fa-pills "></i>
             <!--  if(pet.vermifugado == false){ - adiciona classe desativado } -->
            </div>
        </div>


        <div class="card text-center <%= pet.castrado !== '1' ? 'desativado' : 'castrado' %>" id="castrado"  data-toggle="tooltip" data-placement="bottom" title="Castrado">
            <div class="card-body py-3">
                <i class="fa fa-clipboard-list"></i>
                <!--  if(pet.castrado == false){ - adiciona classe desativado } -->
            </div>
        </div>

    </div>
    </div>

    <script>
        $(document).ready(function(){
            $('[data-toggle="tooltip"]').tooltip();   
        });
        </script>