<div class="row " >
    <div class="col-12 d-flex column justify-content-around">
        <div class="card text-center <%= pet.porte !== 'PEQUENO' && pet.porte !== 'MEDIO' && pet.porte !== 'GRANDE' ? 'desativado' : 'tamanho' %>" id="tamanho"  data-toggle="tooltip" data-placement="bottom" title="Tamanho <%= pet.porte == 'PEQUENO' ? 'pequeno' : pet.porte == 'MEDIO' ? 'mÃ©dio' : pet.porte == 'GRANDE' ? 'grande' : 'desconhecido' %>">
            <div class="card-body py-3">
                <i class="fa fa-weight-hanging"></i>
                              <!--  if(pet.porte == 'nao sei'){ - adiciona classe desativado } -->
            </div>
        </div>


        <div class="card text-center  <%= pet.vacinado !== '0' ? 'desativado' : 'vacinado' %>" id="vacinado" data-toggle="tooltip" data-placement="bottom" title="Vacinado">
